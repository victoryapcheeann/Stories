import { useState } from 'react';
import { Combobox, InputBase, useCombobox } from '@mantine/core';

export function SelectCreatable({
  dataList,          // Application Name List passed as prop
  value,
  onValueChange,
}: {
  dataList: string[];   // Expecting an array of strings for the application names
  value: string | null;
  onValueChange: (val: string | null) => void;
}) {
  const combobox = useCombobox({
    onDropdownClose: () => combobox.resetSelectedOption(),
  });

  const [data, setData] = useState(dataList);  // Use the provided dataList as the state
  const [search, setSearch] = useState(value || '');

  const exactOptionMatch = data.some((item) => item === search);
  const filteredOptions = exactOptionMatch
    ? data
    : data.filter((item) =>
        item.toLowerCase().includes(search.toLowerCase().trim())
      );

  const options = filteredOptions.map((item) => (
    <Combobox.Option value={item} key={item}>
      {item}
    </Combobox.Option>
  ));

  return (
    <Combobox
      store={combobox}
      withinPortal={false}
      onOptionSubmit={(val) => {
        if (val === '$create') {
          setData((current) => [...current, search]);
          onValueChange(search);
        } else {
          onValueChange(val);
          setSearch(val);
        }

        combobox.closeDropdown();
      }}
    >
      <Combobox.Target>
        <InputBase
          rightSection={<Combobox.Chevron />}
          value={search}
          onChange={(event) => {
            combobox.openDropdown();
            combobox.updateSelectedOptionIndex();
            setSearch(event.currentTarget.value);
          }}
          onClick={() => combobox.openDropdown()}
          onFocus={() => combobox.openDropdown()}
          onBlur={() => {
            combobox.closeDropdown();
            setSearch(value || '');
          }}
          placeholder="Search value"
          rightSectionPointerEvents="none"
        />
      </Combobox.Target>

      <Combobox.Dropdown>
        <Combobox.Options>
          {options}
          {!exactOptionMatch && search.trim().length > 0 && (
            <Combobox.Option value="$create">+ Create {search}</Combobox.Option>
          )}
        </Combobox.Options>
      </Combobox.Dropdown>
    </Combobox>
  );
}

import React, { memo, useState } from 'react';
import { useDropdownContext } from '../../context/DropdownValueContext';
import { SelectCreatable } from './SelectCreatable'; // import your new component

export default memo(({ value, onValueChange, stopEditing }: any) => {
  const [currentValue, setCurrentValue] = useState<string | null>(value || '');
  const { applicationNameList, setCurrentApplicationName } = useDropdownContext();  // This will be used instead of groceries

  const handleChange = (newValue: string | null) => {
    setCurrentApplicationName(newValue);
    setCurrentValue(newValue);
    onValueChange(newValue); // Update the grid's value
  };

  return (
    <SelectCreatable
      dataList={applicationNameList}  // Pass applicationNameList as the options
      value={currentValue}
      onValueChange={(selected) => handleChange(selected)}
    />
  );
});

